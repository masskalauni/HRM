@model HRM.Models.Department

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Established" class="control-label"></label>
                <input asp-for="Established" class="form-control" type="date" />
                <span asp-validation-for="Established" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
