@model Designation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Designation</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Role)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
